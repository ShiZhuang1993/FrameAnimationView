<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:FrameAnimView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_btn1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="开启自定义FrameAnimView" />

    <TextView
        android:id="@+id/main_btn2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭自定义FrameAnimView" />


    <TextView
        android:id="@+id/main_btn3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="开启常规动画" />

    <TextView
        android:id="@+id/main_btn4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭常规动画" />

    <TextView
        android:id="@+id/main_btn5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn4"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="开启FrameAnimView" />

    <TextView
        android:id="@+id/main_btn6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn5"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭FrameAnimView" />

    <TextView
        android:id="@+id/main_btn7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn6"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="开启自定义FrameAnim2View" />

    <TextView
        android:id="@+id/main_btn8"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/main_btn7"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭自定义FrameAnim2View" />

    <com.wingderm.frameanimationview.MyFrameAnimView
        android:id="@+id/main_animview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.wingderm.frameanimationview.MyFrameAnim2View
        android:id="@+id/main_animview3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/main_animview1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.zhuang.frameanimationview.FrameAnimView
        android:id="@+id/main_animview2"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        FrameAnimView:animSrc="@drawable/anim_loading" />

</RelativeLayout>